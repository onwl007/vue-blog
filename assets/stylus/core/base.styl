* {
  box-sizing border-box
  -webkit-tap-highlight-color rgba($black, 0) //  remove tap highlight color for mobile safari
}

*:before,
*:after {
  box-sizing border-box
}

:root {
  -webkit-text-size-adjust 100%
  cursor default
}

html, body, #__nuxt {
  width 100%
  height 100%
}

body {
  font .875rem $font-family-base
  line-height 1.53
  color $text-color
  background $body-bg-color
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing antialiased
  text-rendering optimizeLegibility
  user-select none
  overflow-x hidden !important
  overflow-y auto
}

// unify the setting of elements's margin and padding for browsers
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,textarea,p,blockquote,th,td,hr,button,article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section {
  margin 0
  padding 0
}

// Reset fonts for relevant elements
button,input,select,textarea {
  font-family inherit
  font-size inherit
  line-height inherit
  color inherit
}

// Remove the clear button of a text input control in IE10+
input::-ms-clear, input::-ms-reveal {
  display none
}

textarea {
  resize none !importan
}

// Links
body a {
  color inherit
  background transparent
  text-decoration none
  outline none
  cursor pointer
  transition all $animation-duration-slow $ease

  &:focus {
    text-decoration none
    text-decoration-skip ink
  }

  &:active,
  &:hover {
    color $black
    outline 0
    text-decoration none
  }

  &[disabled] {
    color $text-color-placeholder
    cursor not-allowed
    pointer-events none
  }
}

input,
input:focus,
input[type="text"],
input[type="text"]:focus,
select,
textarea {
	outline: none !important;
	box-shadow: none !important;
}

button {
  outline: none !important;
}

ol, ul {
  list-style none
}

h1, h2, h3, h4, h5, h6 {
  margin 0
  padding 0
  line-height $line-height-base
  font-family $font-family-title
}

.none {
  display none !important
}

::-webkit-input-placeholder {
  color $text-color-secondary
}

:-moz-placeholder {
  color $text-color-secondary
}

::-moz-placeholder {
  color $text-color-secondary
}

:-ms-input-placeholder {
  color $text-color-secondary
}

::selection {
  background $base-color
  color $white
}

::webkit-selection {
  background $base-color
  color $white
}

::moz-selection {
  background $base-color
  color $white
}

img {
  max-width 100%
  height auto
  vertical-align middle
  border 0
}

.icon {
  font-size $font-size-base
}

.image-viewer__box {
  z-index $z-index-image-viewer !important
}