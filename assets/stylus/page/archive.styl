.page-archive {
  .sitemap {
    .block {
      margin-bottom 20px

      &:last-child {
        margin-bottom 0
      }

      > .title {
        margin-bottom 10px
        padding-bottom 10px
        border-bottom 1px dashed $border-color
      }

      .list {
        padding 10px 20px
      }

      .year {
        font-size $font-size-lger + 6px
      }

      .month {
        font-size $font-size-lg
      }

      .article-list {
        padding 10px 30px
        .article {
          position relative
          line-height 40px
          color $text-color-secondary

          &::before {
            content ''
            position absolute
            left -12px
            top 50%
            transform translateY(-50%)
            width 2px
            height @width
            border 1px solid $text-color-secondary
            border-radius 1px
          }
        }

        .time {
          margin-right 12px
        }

        .link {
          color $text-color
          font-weight 700
          text-decoration underline

          &:hover {
            color $base-color
          }
        }
      }
    }
  }
}