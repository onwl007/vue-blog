@import '~@/assets/stylus/var/index'
@import '~@/assets/stylus/mixin/index'

.message {
  position fixed
  top 0
  right 0
  left 0
  width auto
  max-width 300px
  margin 0 auto
  text-align center
  z-index 100001
  +xxs() {
    max-width none
  }
  .wrapper {
    flexLayout(column)
    padding 15px 20px
    background $white
    color $text-color
    border-bottom-left-radius 4px
    border-bottom-right-radius 4px
    box-shadow 0 0 15px 0 alpha($black, .1)
    transition all $animation-duration-slow $ease

    .content {
      font-weight 700
    }

    .icon {
      font-size 48px
      &-success {
        color $green-6
      }

      &-error {
        color $red-6
      }

      &-warning {
        color $yellow-6
      }

      &-info {
        color $blue-6
      }
    }
  }
}
